{
    "id": "com.bedsteler20.AppHub",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "apphub",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=~/.local/share/flatpak",
        "--socket=session-bus",
        "--socket=system-bus",
        "--filesystem=host",
        "--filesystem=/var/lib/flatpak",
        "--allow=devel",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=host"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "python3-debugpy.json",
        "python3-requirements.json",
        "flatpak.json",
	"libadw.json",
        {
            "name": "apphub",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": ".."
                }
            ]
        }
    ]
}
